{% extends 'layout.html.twig' %}

{% block title %}
	Les articles
{% endblock %}

{# ============== PAGE COLLECTION =============== #}


{% block content %}
	<div class="mx-auto" style="width: 25em;">
		<div>
			<h2 class="text-center mt-5 mb-4 display-8 lh-1 fw-bold">
				Un aperçu du vaste choix offert par la collection.
			</h2>
		</div>
	</div>
	{# ========= #}

<div class="container-fluid rounded mx-auto d-block">


	{# ============== CATEGORIES =============== #}
	<div class="justify-content-center row">
		<div class="col-md-2 justify-content-center">
			<ul class="text-center list-group">
				<h6>Selection par catégorie</h6>
				<hr>
				<a class="text-decoration-none" href="{{ path('articles_all')}}">
					<li class="list-group-item text-center">
						Tous Voir
					</li>
				</a>
				{# Boucle pour afficher les categorie par leur $id #}
				{% for categorie in categories %}
					<a class="text-decoration-none" href="{{ path('articles_categorie', {id: categorie.id}) }}">
						<li class="list-group-item text-center">
							{{ categorie.nom }}
						</li>
					</a>
				{% endfor %}
			</ul>

		</div>

		{# ============== TTS ARTICLES =============== #}

		<div class="col-md-8 justify-content-center ">
			<div class="row d-flex justify-content-center text-center">

				{% for article in articles %}
					<div class="card col-lg-3 col-md-2 col-sm-2  m-1" style="width: 25%;">

						<div class="card-body row">
							<div class="col-md-6 justify-content-center">
								<img src="{{ asset('photoArticles/' ~ article.photo) }}" class="img-fluid rounded-start" style="max-width: 150px;" alt="{{ article.titre }}">
								<a href="{{ path('article_show', {id: article.id} ) }}" class="stretched-link"></a>

							</div>
							<div class="col-md-6">
								<h6 class="card-title">
									<strong>{{article.titre}}</strong>
								</h6>
								<hr>

								{# condition si pas de categorie #}
								<h6>Catégorie :
									{% if article.categorie %}
										{{ article.categorie.nom }}</h6>
								{% endif %}
								<h6>Epoque :
									{{ article.epoque }}</h6>

								<h7 class="text-muted">Ajouté le :
									{{ article.dateEnregistrement | date('d/m/Y') }}</h7>
								<h6>Couleur :
									{{ article.couleur }}</h6>
								<h6>Taille :
									{{ article.taille }}</h6>
								<h6>Prix :
									<strong>{{ article.prix }}€/jour</strong>
								</h6>
								<h6 class="card-title">
									<a class="btn btn-outline-secondary btn-sm" 
									href="{{ path('article_show', {id: article.id} ) }}">
										{{article.titre}}</a>
								</h6>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

